{
  "name": "assetbridge-nexus",
  "version": "0.1.0",
  "description": "Full-stack hybrid RWA platform for private credit and tokenized assets",
  "type": "module",
  "scripts": {
    "dev": "npm run dev:backend & npm run dev:frontend",
    "dev:frontend": "cd frontend && npm run dev",
    "dev:backend": "cd backend && npm run dev",
    "build:frontend": "cd frontend && npm run build",
    "build:backend": "cd backend && npm run build",
    "test": "jest --coverage",
    "test:contracts": "cd contracts && npx hardhat test",
    "deploy:contracts": "cd contracts && npx hardhat run scripts/deploy.js --network sepolia",
    "lint": "eslint --ext .js,.ts,.tsx frontend backend --config frontend/.eslintrc.cjs",
    "format": "prettier --write \"**/*.{js,ts,tsx,json,css,md}\""
  },
  "keywords": [
    "RWA",
    "blockchain",
    "private-credit",
    "DeFi",
    "tokenization",
    "Ethereum",
    "Web3"
  ],
  "author": "AssetBridge Team",
  "license": "MIT",
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.19",
    "@types/dotenv": "^6.1.1",
    "@types/express": "^5.0.6",
    "@types/express-rate-limit": "^5.1.3",
    "@types/helmet": "^0.0.48",
    "@types/jest": "^30.0.0",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/mongoose": "^5.11.96",
    "@types/morgan": "^1.9.10",
    "@types/node": "^25.3.0",
    "@types/react": "^19.2.14",
    "@types/react-dom": "^19.2.3",
    "@types/supertest": "^6.0.3",
    "eslint": "^10.0.1",
    "nodemon": "^3.1.14",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "bcryptjs": "^3.0.3",
    "cors": "^2.8.6",
    "dotenv": "^17.3.1",
    "ethers": "^6.16.0",
    "express": "^5.2.1",
    "express-rate-limit": "^8.2.1",
    "helmet": "^8.1.0",
    "joi": "^18.0.2",
    "jsonwebtoken": "^9.0.3",
    "mongoose": "^9.2.1",
    "morgan": "^1.10.1",
    "next": "^16.1.6",
    "react": "^19.2.4",
    "react-dom": "^19.2.4",
    "stripe": "^20.3.1",
    "web3": "^4.16.0"
  }
}
